<%- layout('../layout') %>

<div class="list-actions">
    <a href="/admin/posts" class="btn btn-primary caps">Lista</a>
</div>

<h2 class="lead">Edytuj artykuł</h2>

<form method="post" action="/admin/posts/<%= post._id %>">
    <input type="hidden" name="_method" value="PUT" />
    <div class="form-group">
        <label for="title">Tytuł artykułu</label>
        <input type="text" class="form-control" name="title" id="title" value="<%= post.title %>" />
        <% if (errors.title) { %>
            <div class="form-field-error"><%= errors.title.msg %></div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="intro">Zajawka</label>
        <textarea name="intro" class="form-control" id="intro"><%= post.intro %></textarea>
        <% if (errors.intro) { %>
            <div class="form-field-error"><%= errors.intro.msg %></div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="content">Treść</label>
        <textarea name="content" class="form-control" id="content"><%= post.content %></textarea>
        <% if (errors.content) { %>
            <div class="form-field-error"><%= errors.content.msg %></div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="tags">Tagi <small>oddzielone przecinkami</small></label>
        <input type="text" class="form-control" name="tags" id="tags" value="<%= post.tags || '' %>" />
        <% if (errors.tags) { %>
            <div class="form-field-error"><%= errors.tags.msg %></div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="category">Kategoria</label>
        <select class="form-control" id="category" name="category">
            <% categories.forEach(function(category) { %>
                <% if (category._id == post.category) { %>
                    <option value="<%= category._id %>" selected="selected"><%= category.name %></option>
                <% } else { %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                <% } %>
            <% }) %>
        </select>
        <% if (errors.category) { %>
            <div class="form-field-error"><%= errors.category.msg %></div>
        <% } %>
    </div>
    <div class="form-group">
        <input type="submit" value="Edytuj" class="btn btn-default"/>
    </div>
</form>
